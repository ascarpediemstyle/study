<h1>Wine Analyze</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Wine name</th>
    <th>Comments</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
<% @wines.each do |wine| %>
<% 	if wine == @wine then next end %>
  <tr>
    <td><%= wine.id %></td>
    <td><%= wine.wine_name %></td>
    <td><%= wine.comments.slice(0,200) %></td>
    <td><%= wine.price %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= @result_dic.size %></td>    
  </tr>
<% end %>
</table>

