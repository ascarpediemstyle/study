
<h1>Listing wines</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Wine name</th>
    <th>Comments</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wines.each do |wine| %>
  <tr>
    <td><%= wine.id %></td>
    <td><%= wine.wine_name %></td>
    <td><%= wine.comments.slice(0,200) %></td>
    <td><%= wine.price %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
    <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Analyze', wines_analyze_path(wine.id) %></td>
  </tr>
<% end %>
</table>

